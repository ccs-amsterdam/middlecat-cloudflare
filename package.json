{
  "name": "middlecat-cloudflare",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "watch": "tsc --watch",
    "next_env": "cp .dev.vars .env.local",
    "generate_env": "tsx scripts/generate_env.mjs",
    "migrate:prepare": "npx drizzle-kit generate:sqlite --schema=src/drizzle/schema.ts --out=./migrations",
    "migrate:up": "npx wrangler d1 migrations apply middlecat_db",
    "migrate:up:local": "npx wrangler d1 migrations apply middlecat_db --local",
    "migrate": "npm run migrate:prepare && npm run migrate:up",
    "migrate:local": "npm run migrate:prepare && npm run migrate:up:local",
    "migrate:sqlite": "npx drizzle-kit generate:sqlite --schema=src/drizzle/schema.ts --out=./migrations && npx wrangler d1 migrations apply middlecat_db --local",
    "pages:build": "npx @cloudflare/next-on-pages@1",
    "pages:dev": "npx wrangler pages dev .vercel/output/static --compatibility-date=2023-11-21 --compatibility-flag=nodejs_compat",
    "pages:deploy": "npx wrangler pages deploy .vercel/output/static",
    "pages:publish": "npm run pages:build && npm run pages:deploy",
    "pages:watch": "npx @cloudflare/next-on-pages --watch",
    "deploy:logs": "npx wrangler pages deployment tail"
  },
  "dependencies": {
    "@auth/core": "^0.18.3",
    "@auth/d1-adapter": "^0.2.6",
    "@auth/drizzle-adapter": "^0.3.8",
    "@tanstack/react-query": "^5.14.1",
    "drizzle-orm": "^0.29.0",
    "jose": "^5.2.0",
    "middlecat-react": "^0.3.19",
    "next": "14.2.0",
    "next-auth": "^5.0.0-beta.4",
    "react": "^18",
    "react-dom": "^18",
    "react-icons": "^4.12.0",
    "ua-parser-js": "^1.0.37",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.11.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/ua-parser-js": "^0.7.39",
    "autoprefixer": "^10.0.1",
    "drizzle-kit": "^0.20.4",
    "eslint": "^8",
    "eslint-config-next": "14.0.3",
    "eslint-plugin-next-on-pages": "^1.7.4",
    "postcss": "^8",
    "tsx": "^4.7.0",
    "typescript": "^5",
    "vercel": "^34.2.5",
    "wrangler": "^3.59.0"
  }
}
